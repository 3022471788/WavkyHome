<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="bean">
	<class name="User">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="name" not-null="true" unique="true" length="100" />
		<property name="password" not-null="true" length="100" />
	</class>
	<class name="Project">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="title" not-null="true" length="100" />
		<property name="type" not-null="true" length="30" />
		<property name="linkAddr" not-null="true" length="1024" />
		<property name="snapshotAddr" not-null="true" length="1024" />
		<property name="addTime" not-null="true" />
	</class>
	<class name="Interface">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="description" not-null="true" length="2048" />
		<property name="body" not-null="true" length="1024" />
		<property name="request" length="5000" />
		<property name="response" length="5000" />
		<property name="addTime" not-null="true" />
	</class>
</hibernate-mapping>